<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/button_left"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/White"
        android:id="@+id/button_left"
        android:onClick="pressed_left"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/button_down"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/White"
        android:id="@+id/button_down"
        android:onClick="pressed_down"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/button_up"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/White"
        android:id="@+id/button_up"
        android:onClick="pressed_up" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/White"
        android:id="@+id/textView" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/button_right"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/White"
        android:id="@+id/button_right"
        android:onClick="pressed_right"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="220dp"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:background="@android:drawable/ic_lock_idle_alarm"
        android:layout_alignTop="@+id/button_up"
        android:layout_toRightOf="@+id/button_right"
        android:layout_toEndOf="@+id/button_right"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_right"
        android:layout_toEndOf="@+id/button_right"
        android:layout_marginBottom="520dp"
        android:id="@+id/switch1" />


</RelativeLayout>